@model WebKamp.Models.AdminKamp
@{
    ViewBag.Title = "Giriş Yap";
}
<!doctype html>
<html lang="en">
<head>
    <title>Login 10</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/style2.css">

</head>
<body class="img js-fullheight" style="background-image: url(../../Images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">
                  
                    </h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Kullanıcı Girişi</h3>
                        @* <form action="#" class="signin-form">*@

                        @using (Html.BeginForm("About", "Home", new { FormMethod.Post }))
                        {


                            <div class="form-group">
                                @Html.TextBoxFor(m => m.KullanıcıAdı, new { @class = "form-control", placeholder = "Kullanıcı Adı", autofocus = "autofocus" })
                            </div>
                            <div class="form-group">

                                @Html.PasswordFor(m => m.Şifre, new { @class = "form-control", placeholder = "Şifre " })
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                        }

                    <div class="alert-info" text-align="center">
                        @ViewBag.Mesaj
                    </div>
                       
                        <div class="form-group d-md-flex">
                            <div class="w-50">
                                <label class="checkbox-wrap checkbox-primary">
                                    Beni Hatırla
                                    <input type="checkbox" checked>
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="w-50 text-md-right">
                                <a href="#" style="color: #fff">Şifremi Unuttum</a>
                            </div>
                        </div>

                        @* </form>*@
                        <p class="w-100 text-center">&mdash; Giriş Yapmak için  &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> E-Devlet</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> GençBiz</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Scripts/jquery2.min.js"></script>
    <script src="~/Scripts/popper2.js"></script>
    <script src="~/Scripts/bootstrap2.min.js"></script>
    <script src="~/Scripts/main2.js"></script>

</body>
</html>
